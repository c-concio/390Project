<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a390project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name = "android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TaskPackagingActivity"></activity>
        <activity android:name=".TaskBakingActivity" />
        <activity android:name=".TaskPaintingActivity" />
        <activity android:name=".TaskPrePaintingActivity" />
        <activity android:name=".TaskInspectionActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LogInActivity" />
        <activity android:name=".EmployeeActivity" />
        <activity android:name=".MachineActivity" />
        <activity android:name=".ProjectActivity" />

        <service android:name=".ForegroundServices.NotificationForegroundService"
            android:exported="true"
            android:enabled="true" />
        <service android:name=".ForegroundServices.BigOvenGraphForegroundService"
            android:exported="true"
            android:enabled="true"/>
        <service android:name=".ForegroundServices.GFSOvenGraphForegroundService" />
    </application>

</manifest>